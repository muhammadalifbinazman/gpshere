# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For local development (PostgreSQL)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=
DB_NAME=gpsphere_db
DB_PORT=5432
DB_SSL=false

# For Render.com PostgreSQL Database
# Render automatically provides DATABASE_URL, but you can also use:
# DB_HOST=your-database-host.onrender.com
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
# DB_NAME=gpsphere_db
# DB_PORT=5432
# DB_SSL=true

# OR use Render's automatic DATABASE_URL (recommended):
# DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret Key (Change this in production!)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=super_secret_key_change_me_in_production_12345

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
# Use Gmail App Password, NOT your regular password
# Get it from: https://myaccount.google.com/apppasswords
EMAIL_PASS=your_gmail_app_password

# TAC Test Mode
# Set to true to skip email sending and return TAC in API response (for testing)
# Set to false in production
TAC_TEST_MODE=false

