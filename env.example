# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For local development (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=gpsphere_db
DB_PORT=3306
DB_SSL=false

# For External MySQL Services (PlanetScale, Railway, Aiven, etc.)
# DB_HOST=your-mysql-host.com
# DB_USER=your-mysql-user
# DB_PASSWORD=your-mysql-password
# DB_NAME=gpsphere_db
# DB_PORT=3306
# DB_SSL=true  # Usually required for cloud MySQL services

# JWT Secret Key (Change this in production!)
# Generate a strong random string: openssl rand -base64 32
JWT_SECRET=super_secret_key_change_me_in_production_12345

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
# Use Gmail App Password, NOT your regular password
# Get it from: https://myaccount.google.com/apppasswords
EMAIL_PASS=your_gmail_app_password

# TAC Test Mode
# Set to true to skip email sending and return TAC in API response (for testing)
# Set to false in production
TAC_TEST_MODE=false

